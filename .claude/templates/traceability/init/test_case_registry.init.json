{
    "$documentation": {
        "purpose": "Registry of Test Cases that verify module functionality and NFR compliance.",
        "stage": "ProductSpecs",
        "phase_position": "Verification layer - created from modules and NFRs to ensure quality",
        "upstream": [
            "requirements_registry.json",
            "module_registry.json",
            "nfr_registry.json"
        ],
        "downstream": [],
        "commands": [
            "/productspecs",
            "/productspecs-tests"
        ],
        "skills": [
            "ProductSpecs_Generator",
            "ProductSpecs_TestGenerator"
        ],
        "id_pattern": {
            "test_cases": {
                "format": "TC-{MODULE}-{NNN}",
                "example": "TC-TASK-005"
            },
            "e2e_scenarios": {
                "format": "E2E-{NNN}",
                "example": "E2E-003"
            }
        },
        "key_attributes": {
            "items[].id": "Test case ID following TC-{MODULE}-{NNN} pattern",
            "items[].module_ref": "MOD-* ID this test verifies",
            "items[].type": "'functional' or 'performance'",
            "e2e_scenarios[].module_refs": "Array of modules involved in the flow"
        },
        "test_types": {
            "functional": "Verifies correct behavior",
            "performance": "Verifies NFR metrics"
        },
        "validation_rules": [
            "Every P0 module MUST have at least one P0 test case",
            "E2E scenarios MUST cover cross-module workflows"
        ]
    },
    
    "schema_version": "1.0.0",
    "description": "Registry of Test Cases with traceability",
