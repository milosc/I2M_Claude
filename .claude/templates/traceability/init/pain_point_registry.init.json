            "/discovery-painpoints"
        ],
        "skills": [
            "Discovery_ExtractPainPoints",
            "Discovery_Orchestrator"
        ],
        "id_pattern": {
            "format": "PP-{CATEGORY}.{NUMBER}",
            "categories": {
                "1": "Performance & Speed",
                "2": "Usability & UX",
                "3": "Visibility & Reporting",
                "4": "Process & Workflow",
                "5": "Configuration & Flexibility",
                "6": "Integration & Data",
                "7": "Compliance & Audit"
            },
            "example": "PP-2.4"
        },
        "key_attributes": {
            "pain_points[].id": "Unique identifier following PP-{CAT}.{NUM} pattern",
